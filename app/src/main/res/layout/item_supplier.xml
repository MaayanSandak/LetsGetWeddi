<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:background="@drawable/rounded_card"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageSupplier"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/supplier_image"
        android:background="@drawable/rounded_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/actionsRow"
        app:layout_goneMarginBottom="8dp"/>

    <ImageButton
        android:id="@+id/buttonFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_favorite_border"
        android:contentDescription="@string/add_to_favorites"
        app:layout_constraintTop_toTopOf="@id/imageSupplier"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textName"
        style="@style/Weddi.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/md_theme_onSurface"
        android:text="@string/supplier_name"
        app:layout_constraintStart_toEndOf="@id/imageSupplier"
        app:layout_constraintEnd_toStartOf="@id/buttonFavorite"
        app:layout_constraintTop_toTopOf="@id/imageSupplier"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textLocation"
        style="@style/Weddi.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/md_theme_onSurface"
        android:text="@string/location"
        app:layout_constraintStart_toStartOf="@id/textName"
        app:layout_constraintEnd_toStartOf="@id/buttonFavorite"
        app:layout_constraintTop_toBottomOf="@id/textName"/>

    <TextView
        android:id="@+id/textSubtitle"
        style="@style/Weddi.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/md_theme_onSurface"
        android:text="@string/see_details"
        app:layout_constraintStart_toStartOf="@id/textName"
        app:layout_constraintEnd_toStartOf="@id/buttonFavorite"
        app:layout_constraintTop_toBottomOf="@id/textLocation"/>

    <!-- Actions row -->
    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        app:layout_constraintStart_toStartOf="@id/imageSupplier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSupplier"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/buttonCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/phone"
            app:srcCompat="@android:drawable/ic_menu_call"/>

        <ImageButton
            android:id="@+id/buttonChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/chat"
            app:srcCompat="@android:drawable/ic_menu_send"/>

        <ImageButton
            android:id="@+id/buttonGallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/gallery"
            app:srcCompat="@android:drawable/ic_menu_gallery"/>

        <ImageButton
            android:id="@+id/buttonCalendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/availability"
            app:srcCompat="@android:drawable/ic_menu_month"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
