<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LetsGetWeddi"
        tools:targetApi="31">

        <!-- Deep link: letsgetweddi://availability/<anything> -->
        <activity
            android:name=".ui.supplier.SupplierCalendarActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="availability"
                    android:scheme="letsgetweddi" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.gallery.GalleryViewActivity"
            android:exported="false"
            android:label="@string/gallery" />

        <activity
            android:name=".ui.gallery.GalleryManageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="gallery"
                    android:pathPrefix="/manage"
                    android:scheme="letsgetweddi" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.LetsGetWeddi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false" />

        <activity
            android:name=".ui.chat.ConversationsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.ProviderDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />

        <!-- FIX: MainActivity is in package com.example.letsgetweddi (not .ui) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LetsGetWeddi" />

        <!-- Wrapper activity for EditSupplierFragment -->
        <activity
            android:name=".ui.supplier.SupplierEditActivity"
            android:exported="false" />

    </application>
</manifest>
